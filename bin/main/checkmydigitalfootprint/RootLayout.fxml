<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane prefHeight="500.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="checkmydigitalfootprint.RootLayoutController">
   <top>
      <MenuBar stylesheets="@Theme.css" BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
                  <MenuItem id="open" mnemonicParsing="false" onAction="#handleOpen" text="Open" />
                  <MenuItem id="save" mnemonicParsing="false" onAction="#handleSave" text="Save" />
                  <MenuItem id="save-as" mnemonicParsing="false" onAction="#handleSaveAs" text="Save As" />
                  <MenuItem id="add-credentials" mnemonicParsing="false" onAction="#handleAddCredentials" text="Add Credentials" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
</BorderPane>
